options="󰍁

󰗽
󰜉
󰐥"

rofi_cmd() {
	rofi -dmenu \
		-p "Goodbye ${USER}" \
		-mesg "Uptime: $(uptime -p | sed -e 's/up //g')" \
		-theme "$HOME"/.config/rofi/themes/PowerMenu.rasi
}

chosen=$(printf "%s\n" "$options" | rofi_cmd)

# betterlockscreen -u "$HOME"/wallpapers/emilia.png -b dim

case $chosen in
    "󰐥") systemctl poweroff ;;
    "󰜉") systemctl reboot ;;
    "󰍁") betterlockscreen -l blur ;;
    "") systemctl suspend ;;
    "󰗽") bspc quit ;;
esac